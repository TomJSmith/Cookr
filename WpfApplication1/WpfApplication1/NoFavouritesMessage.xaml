             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="470">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextAlignment="Center" Height="47" TextWrapping="Wrap" Text="You have no Favourites :(" VerticalAlignment="Top" Width="470" FontSize="26.667" Foreground="#FFE8685D"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" TextAlignment="Center" Height="153" TextWrapping="Wrap" Text="Touch         on a recipe's page to Favourite it" VerticalAlignment="Top" Width="470" FontSize="26.667" Foreground="#FFE8685D" Margin="0,47,0,0"/>
